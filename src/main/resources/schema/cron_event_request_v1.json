{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "urn:cron-event-request:v1",
  "title": "CronEventRequest",
  "description": "Request sent by Job Orchestrator to Cron Validator worker",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "jobId",
    "cronValue",
    "cronType",
    "requestId",
    "createdAt"
  ],
  "properties": {
    "jobId": {
      "type": "string",
      "description": "Unique job identifier generated by Job Orchestrator"
    },
    "cronValue": {
      "type": "string",
      "description": "Cron expression to validate",
      "minLength": 1
    },
    "cronType": {
      "type": "string",
      "description": "Type of cron expression",
      "enum": [
        "QUARTZ",
        "UNIX"
      ]
    },
    "requestId": {
      "type": "string",
      "description": "Correlation ID for request tracking"
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp when the job was created in Job Orchestrator"
    }
  }
}